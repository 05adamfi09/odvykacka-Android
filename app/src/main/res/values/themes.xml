<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Project" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.SplashScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowSplashScreenBackground">#6C63FF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Project</item>
    </style>

    <style name="Theme.Project.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>